#!/bin/sh

#
# $Id$
#

VERSION="3.23"
RELEASE=1

if [ $RELEASE -eq 1 ]; then
 VERSIONLONG="$VERSION"
else
 VERSIONLONG="$VERSION Beta"
fi

echo
echo "Configure for iroffer-dinoex $VERSIONLONG"

usage()
{
echo "Usage: Configure [ options ]"
echo "   -help        This help"
echo "   -error       Print errors while running Configure"
echo "   -debug       Compile with debug symbols"
echo "   -profiling   Compile with profiling flags"
echo "   -warn        Compile with extra warning flags"
echo "   -geoip       Compile GeoIP lib"
echo "   -curl        Compile Curl lib (for the FETCH-Command)"
echo "   -tls         Compile with GNU TLS lib"
echo "   -upnp        Compile with UPNP support with miniupnpc"
echo "   -ruby        Compile with RUBY scripting support"
echo "   -no-blowfish Compile without blowfish encryption"
echo "   -no-openssl  Compile without OpenSSL lib"
echo "   -no-http     Compile without HTTP server"
echo "   -no-admin    Compile without HTTP Admin"
echo "   -no-telnet   Compile without Telnet server"
echo "   -no-memsave  Compile without memory protection"
echo "   -no-libs     Compile an static binary"
echo "   PREFIX=      Set installation prefix (/usr/local)"
echo "   LOCALBASE=   Set prefix for includes and libs (/usr/local)"
echo "   CC=gcc       Set Compiler (gcc)"
echo "   CFLAGS=      Set custom compiler flags"
echo "   LDFLAGS=     Set custom linker flags"
echo "   LIBS=        Set custom libs"
echo "   RUBY=        Set ruby interpreter (ruby)"
exit 64
}

waserror()
{
echo "You should re-run Configure with the '-error' argument to see the details."
echo
exit 72
}

FEATURES=""
OPT_WARN2=false
OPT_ERRORS=false
OPT_DEBUG=false
OPT_WARN=false
OPT_PROF=false
OPT_GEOIP=false
OPT_CURL=false
OPT_SSL=true
OPT_TLS=false
OPT_UPNP=false
OPT_RUBY=false
OPT_NOADMIN=false
OPT_NOBLOWFISH=false
OPT_NOHTTP=false
OPT_NOTELNET=false
OPT_NOMEMSAVE=false
OPT_STATIC=false
cctype="gcc"
ruby="ruby"
PREFIX="/usr/local"
LOCALBASE="/usr/local"

while test "${1}" != ""
do
  case "${1}" in
  -h*) usage ;;
  CC=*) cctype="${1#CC=}" ;;
  CFLAGS=*) CFLAGS="${1#CFLAGS=}" ;;
  LDFLAGS=*) LDFLAGS="${1#LDFLAGS=}" ;;
  LIBS=*) LIBS="${1#LIBS=}" ;;
  LOCALBASE=*) LOCALBASE="${1#LOCALBASE=}" ;;
  PREFIX=*) PREFIX="${1#PREFIX=}" ;;
  RUBY=*) ruby="${1#RUBY=}" ;;
  WARN=*) OPT_WARN2="${1#WARN=}" ;;
  -e*) OPT_ERRORS=true ;;
  -d*) OPT_DEBUG=true ;;
  -w*) OPT_WARN=true ;;
  -p*) OPT_PROF=true ;;
  -g*) OPT_GEOIP=true ;;
  -c*) OPT_CURL=true ;;
  -s*) echo "WARNING: Please use -no-openssl"; echo ""; OPT_SSL=false ;; # old
  -t*) OPT_TLS=true; OPT_SSL=false ;;
  -u*) OPT_UPNP=true ;;
  -r*) OPT_RUBY=true;;
  -no-a*) OPT_NOADMIN=true ;;
  -no-b*) OPT_NOBLOWFISH=true ;;
  -no-h*) OPT_NOHTTP=true ;;
  -no-t*) OPT_NOTELNET=true ;;
  -no-o*) OPT_SSL=false ;;
  -no-m*) OPT_NOMEMSAVE=true ;;
  -no-l*) OPT_STATIC=true ;;
  -m) echo "WARNING: Multinet is now default, remove -m"; echo "" ;; # multinet
  *)  usage ;;
  esac
  shift
done

echo -n "Determining OS... "
uname
ostype=`uname`
installgroup="root"
libs=""
rstatic=""

case "$ostype" in
 FreeBSD | OpenBSD | NetBSD )
  installgroup="wheel"
  ;;
 Darwin)
  libs="$libs -lresolv"
  rstatic="-lpthread -ldl -lz"
  ;;
 Linux | IRIX | IRIX64 | OSF1 | Rhapsody | AIX )
  # nothing fancy
  rstatic="-lpthread -ldl -lz"
  ;;
 GNU/kFreeBSD | GNU )
  ostype="Linux"
  rstatic="-lpthread -ldl -lz"
  ;;
 SunOS )
  libs="$libs -lsocket -lnsl -lresolv"
  ;;
 BSD/OS )
  ostype=BSD_OS
  ;;
 HP-UX )
  ostype=HPUX
  ;;
 CYGWIN* )
  VERSIONLONG="${VERSIONLONG} (Win32)"
  short_ostype=`uname | cut -d "_" -f 1`
  ostype=$short_ostype
  exe=.exe
  
  # only 1.5.6 or later is supported
  echo -n "Checking for cygwin >= 1.5.6... "
  ver=`uname -r | cut -d '(' -f 1`
  ver_A=`echo $ver | cut -d '.' -f 1`
  ver_B=`echo $ver | cut -d '.' -f 2`
  ver_C=`echo $ver | cut -d '.' -f 3`
  
  # 2.x.x - 9.x.x, 1.6.x - 1.9.x, and 1.5.6 - 1.5.9 are ok
  if [ \( "$ver_A" -ge "2" \)                                         \
    -o \( "$ver_A" -eq "1" -a "$ver_B" -ge "6" \)                     \
    -o \( "$ver_A" -eq "1" -a "$ver_B" -eq "5" -a "$ver_C" -ge "6" \) \
     ]; then
   echo "OK, $ver"
  else
   echo "***ERROR***: $ver < 1.5.6"
   waserror
  fi
  ;;
 *)
  echo "***ERROR***: This OS is not supported"
  waserror
  ;;
esac

echo "/* Automatically Generated, Do Not Edit */" > src/iroffer_config.h
echo "" >> src/iroffer_config.h

echo "#define VERSIONLONG \"$VERSIONLONG\"" >> src/iroffer_config.h
echo "#define _OS_$ostype" >> src/iroffer_config.h

if $OPT_ERRORS; then
 echo "Printing Errors During Execution..."
else
 exec 2>/dev/null
fi

if $OPT_DEBUG; then
echo "Configuring for debugging."
echo "#define DEBUG" >> src/iroffer_config.h
DEBUG="-g"
case "${cctype}" in
*cparser*)
	DEBUGFLAGS="
-Waggregate-return
-Wchar-subscripts
-Wcomment
-Wimplicit-int
-Wmain
-Wnested-externs
-Wnonnull
-Wparentheses
-Wredundant-decls
-Wreturn-type
-O 
-Wunknown-pragmas
-Wunused
-Wunused-function
-Wunused-label
-Wunused-parameter
-Wunused-value
-Wunused-variable 
"
	;;
*)
	DEBUGFLAGS="
-Waggregate-return
-Wchar-subscripts
-Wcomment
-Wendif-labels
-Wformat-security
-Wimplicit-int
-Winline
-Wmissing-braces
-Wmissing-format-attribute
-Wmain
-Wnested-externs
-Wnonnull
-Wparentheses
-Wredundant-decls
-Wreturn-type
-Wstrict-aliasing
-Wswitch
-Wsystem-headers
-Wtrigraphs
-Wuninitialized -O 
-Wunknown-pragmas
-Wunused
-Wunused-function
-Wunused-label
-Wunused-parameter
-Wunused-value
-Wunused-variable 
"
	;;
esac
else
DEBUG="-O2"
fi

if $OPT_WARN; then
echo "Configuring for extra warnings."
case "${cctype}" in
*cparser*)
	WARNS="-Wcast-qual
-Wformat
-Wimplicit
-Wmissing-declarations
-Wmissing-prototypes
-Wmissing-noreturn
-Wpointer-arith
-Wreturn-type
-Wshadow
-Wsign-compare
-Wstrict-prototypes
-Wwrite-strings"
	;;
*)
	WARNS="-Wbad-function-cast
-Wcast-qual
-Wcast-align
-Wformat
-Wimplicit
-Wmissing-declarations
-Wmissing-prototypes
-Wmissing-noreturn
-Wpointer-arith
-Wreturn-type
-Wshadow
-Wsign-compare
-Wstrict-prototypes
-Wwrite-strings"
	;;
esac
fi

if $OPT_WARN2; then
echo "Configuring for pedantic warnings."
case "${cctype}" in
*cparser*)
	WARNS2="
-Wconversion
-Wfloat-equal
-Wpacked
-Wpadded
-Wswitch-default
-Wswitch-enum
-Wundef
-Wunreachable-code
"
        ;;
gcc4*)
	WARNS2="
-Wconversion
-Wc++-compat
-Wformat-nonliteral
-Wformat=2
-Wfloat-equal
-Wlarger-than-20000
-Wpacked
-Wpadded
-Wswitch-default
-Wswitch-enum
-Wundef
-Wunreachable-code
"
        ;;
*)
	WARNS2="
-Wconversion
-Wformat-nonliteral
-Wformat=2
-Wfloat-equal
-Wlarger-than-20000
-Wpacked
-Wpadded
-Wswitch-default
-Wswitch-enum
-Wundef
-Wunreachable-code
"
	;;
esac
fi

if $OPT_PROF; then
echo "Configuring for profiling."
PROF="-pg"
fi

if $OPT_GEOIP; then
echo "Configuring for GeoIP."
fi

if $OPT_CURL; then
echo "Configuring for Curl."
fi

if ! $OPT_SSL; then
echo "Configuring without SSL."
fi

if $OPT_TLS; then
echo "Configuring for GNU TLS."
OPT_SSL=false
fi

if $OPT_UPNP; then
echo "Configuring for UPNP with lminiupnpc."
fi

if $OPT_NOHTTP; then
echo "Configuring without HTTP Server."
echo "#define WITHOUT_HTTP" >> src/iroffer_config.h
fi

if $OPT_NOADMIN; then
echo "Configuring without HTTP Admin."
echo "#define WITHOUT_HTTP_ADMIN" >> src/iroffer_config.h
fi

if $OPT_NOTELNET; then
echo "Configuring without Telnet Server."
echo "#define WITHOUT_TELNET" >> src/iroffer_config.h
fi

if $OPT_NOBLOWFISH; then
echo "Configuring without blowfish encryption."
echo "#define WITHOUT_BLOWFISH" >> src/iroffer_config.h
fi

if $OPT_NOMEMSAVE; then
echo "Configuring without memory protection."
echo "#define WITHOUT_MEMSAVE" >> src/iroffer_config.h
fi

echo -n "Checking for make... "
if [ -f "`type make | awk '{print $NF}'`" ]; then
 maketype="make"
 if [ -x "`type $maketype | awk '{print $NF}'`" ]; then
  echo "found $maketype"
 else
  echo "found $maketype. ***ERROR***: You are not allowed to execute $maketype"
  waserror
 fi
elif [ -f "`type gmake | awk '{print $NF}'`" ]; then
 maketype="gmake"
 if [ -x "`type $maketype | awk '{print $NF}'`" ]; then
  echo "found $maketype"
 else
  echo "found $maketype. ***ERROR***: You are not allowed to execute $maketype"
  waserror
 fi
else
 echo "not found. ***ERROR***: Couldn't find make or gmake"
 maketype="make"
 waserror
fi

echo -n "Checking for gcc/cc... "
ccrun=`type $cctype | awk '{print $NF}'`
if [ -f "${ccrun}" ]; then
 if [ -x "${ccrun}" ]; then
  echo "found $cctype"
 else
  echo "found $cctype. ***ERROR***: You are not allowed to execute $cctype"
  waserror
 fi
else
 cctype="cc"
 if [ -f "${ccrun}" ]; then
  if [ -x "${ccrun}" ]; then
   echo "found $cctype"
  else
   echo "found $cctype. ***ERROR***: You are not allowed to execute $cctype"
   waserror
  fi
 else
  echo "not found. ***ERROR***: Couldn't find gcc or cc"
  maketype="gcc"
  waserror
 fi
fi

echo -n "Seeing if $cctype works... "
echo "
#include <stdlib.h>
int
#ifdef __GNUC__
__attribute__ ((noreturn))
#endif
main (int argc, char **argv) {exit(0);}
" > config.temp.c
if $cctype -o config.temp config.temp.c $CFLAGS $LDFLAGS $LIBS; then
 echo "yes"
else
 echo " ***ERROR***: $cctype didn't seem to work."
 waserror
fi

echo -n "Seeing if $cctype accepts '-Wall'... "
echo "
#include <stdlib.h>
int
#ifdef __GNUC__
__attribute__ ((noreturn))
#endif
main (int argc, char **argv) {exit(0);}
" > config.temp.c
if $cctype -Wall -o config.temp config.temp.c $CFLAGS $LDFLAGS $LIBS; then
 echo "yes"
 WARNS="-Wall $WARNS"
else
 echo " no"
fi

echo -n "Seeing if $cctype accepts '-Werror'... "
echo "
#include <stdlib.h>
int
#ifdef __GNUC__
__attribute__ ((noreturn))
#endif
main (int argc, char **argv) {exit(0);}
" > config.temp.c
if $cctype -Werror -o config.temp config.temp.c $CFLAGS $LDFLAGS $LIBS; then
 echo "yes"
 WERROR="-Werror"
else
 echo " no"
fi


echo -n "Seeing how to define a 16 bit integer... "
echo "
#include <stdlib.h>
#include <stdio.h>
int
#ifdef __GNUC__
__attribute__ ((noreturn))
#endif
main (int argc, char **argv) {
 printf(\"%d\", (int)sizeof( C_IR_INT16 ));
 exit(0);
 }
" > config.temp.c
if $cctype -DC_IR_INT16="short" config.temp.c $libs -o config.temp $WARNS $WERROR $CFLAGS $LDFLAGS $LIBS && [ "`./config.temp`" = "2" ]; then
 echo "short"
 echo "typedef short ir_int16;" >> src/iroffer_config.h
 echo "typedef unsigned short ir_uint16;" >> src/iroffer_config.h
elif $cctype -DC_IR_INT16="int" config.temp.c $libs -o config.temp $WARNS $WERROR $CFLAGS $LDFLAGS $LIBS && [ "`./config.temp`" = "2" ]; then
 echo "int"
 echo "typedef int ir_int16;" >> src/iroffer_config.h
 echo "typedef unsigned int ir_uint16;" >> src/iroffer_config.h
else
 echo "Unknown. ***ERROR***: neither short or int worked."
 waserror
fi


echo -n "Seeing how to define a 32 bit integer... "
echo "
#include <stdlib.h>
#include <stdio.h>
int
#ifdef __GNUC__
__attribute__ ((noreturn))
#endif
main (int argc, char **argv) {
 printf(\"%d\", (int)sizeof( C_IR_INT32 ));
 exit(0);
 }
" > config.temp.c
if $cctype -DC_IR_INT32="int" config.temp.c $libs -o config.temp $WARNS $WERROR $CFLAGS $LDFLAGS $LIBS && [ "`./config.temp`" = "4" ]; then
 echo "int"
 echo "typedef int ir_int32;" >> src/iroffer_config.h
 echo "typedef unsigned int ir_uint32;" >> src/iroffer_config.h
elif $cctype -DC_IR_INT32="long" config.temp.c $libs -o config.temp $WARNS $WERROR $CFLAGS $LDFLAGS $LIBS && [ "`./config.temp`" = "4" ]; then
 echo "long"
 echo "typedef long ir_int32;" >> src/iroffer_config.h
 echo "typedef unsigned long ir_uint32;" >> src/iroffer_config.h
elif $cctype -DC_IR_INT32="long long" config.temp.c $libs -o config.temp $WARNS $WERROR $CFLAGS $LDFLAGS $LIBS && [ "`./config.temp`" = "4" ]; then
 echo "long long"
 echo "typedef long long ir_int32;" >> src/iroffer_config.h
 echo "typedef unsigned long long ir_uint32;" >> src/iroffer_config.h
elif $cctype -DC_IR_INT32="short" config.temp.c $libs -o config.temp $WARNS $WERROR $CFLAGS $LDFLAGS $LIBS && [ "`./config.temp`" = "4" ]; then
 echo "short"
 echo "typedef short ir_int32;" >> src/iroffer_config.h
 echo "typedef unsigned short ir_uint32;" >> src/iroffer_config.h
else
 echo "Unknown. ***ERROR***: neither short, int, long or long long worked."
 waserror
fi

echo -n "Seeing how to define a 64 bit integer... "
echo "
#include <stdlib.h>
#include <stdio.h>
int
#ifdef __GNUC__
__attribute__ ((noreturn))
#endif
main (int argc, char **argv) {
 printf(\"%d\", (int)sizeof( C_IR_INT64 ));
 exit(0);
 }
" > config.temp.c
if $cctype -DC_IR_INT64="long" config.temp.c $libs -o config.temp $WARNS $WERROR $CFLAGS $LDFLAGS $LIBS && [ "`./config.temp`" = "8" ]; then
 echo "long"
 echo "typedef long ir_int64;" >> src/iroffer_config.h
 echo "typedef unsigned long ir_uint64;" >> src/iroffer_config.h
elif $cctype -DC_IR_INT64="long long" config.temp.c $libs -o config.temp $WARNS $WERROR $CFLAGS $LDFLAGS $LIBS && [ "`./config.temp`" = "8" ]; then
 echo "long long"
 echo "typedef long long ir_int64;" >> src/iroffer_config.h
 echo "typedef unsigned long long ir_uint64;" >> src/iroffer_config.h
elif $cctype -DC_IR_INT64="int" config.temp.c $libs -o config.temp $WARNS $WERROR $CFLAGS $LDFLAGS $LIBS && [ "`./config.temp`" = "8" ]; then
 echo "int"
 echo "typedef int ir_int64;" >> src/iroffer_config.h
 echo "typedef unsigned int ir_uint64;" >> src/iroffer_config.h
elif $cctype -DC_IR_INT64="short" config.temp.c $libs -o config.temp $WARNS $WERROR $CFLAGS $LDFLAGS $LIBS && [ "`./config.temp`" = "8" ]; then
 echo "short"
 echo "typedef short ir_int64;" >> src/iroffer_config.h
 echo "typedef unsigned short ir_uint64;" >> src/iroffer_config.h
else
 echo "Unknown. ***ERROR***: neither short, int, long or long long worked."
 waserror
fi

if [ "$ostype" = CYGWIN ]; then
  echo -n "Checking if AF_INET6 is defined ... "
  echo "
#include <stdlib.h>
#include <stdio.h>
#include <sys/socket.h>
int
#ifdef __GNUC__
__attribute__ ((noreturn))
#endif
main (int argc, char **argv) {
 printf(\"%d\", (int)AF_INET6);
 exit(0);
 }
" > config.temp.c
 if $cctype config.temp.c $libs -o config.temp $WARNS $WERROR $CFLAGS $LDFLAGS $LIBS; then
  echo "looks good"
 else
  echo "failed, IPv6 will not work."
  echo "#define AF_INET6 23" >> src/iroffer_config.h
  CFLAGS="$CFLAGS -DUSE_IPV6=1"
 fi
fi

echo -n "Seeing if compiling with standard #include's works... "
echo "
#include \"src/iroffer_config.h\"
#include \"src/iroffer_defines.h\"
#include \"src/iroffer_headers.h\"
#include \"src/iroffer_globals.h\"
int
#ifdef __GNUC__
__attribute__ ((noreturn))
#endif
main (int argc, char **argv) {exit(0);}
" > config.temp.c
if $cctype -DSIGNEDSOCK=signed config.temp.c $libs -o config.temp $CFLAGS $LDFLAGS $LIBS; then
 echo "looks good"
else
 echo " ***ERROR***: couldn't build with standard #include's"
 waserror
fi


echo -n "Seeing how large FD_SETSIZE is... "
echo "
#include \"src/iroffer_config.h\"
#include \"src/iroffer_defines.h\"
#include \"src/iroffer_headers.h\"
#include \"src/iroffer_globals.h\"
FD_SETSIZE
" > config.temp.c
if $cctype -E -o config.temp.p config.temp.c $WARNS $WERROR $CFLAGS $LDFLAGS $LIBS; then
 setsize=`tail -2 config.temp.p |grep -v "config.temp"`
 setsize="${setsize%U}"
 echo -n " $setsize"
 
 if [ "$ostype" = CYGWIN -a $setsize -le 255 ]; then
   echo ", Boosting up to 255"
   echo "#define FD_SETSIZE 255" >> src/iroffer_config.h
 else
   echo
 fi
else
 echo " ***ERROR***: couldn't determine it"
 waserror
fi

echo -n "Determining endianness... "
echo "
#include \"src/iroffer_config.h\"
#include \"src/iroffer_defines.h\"
#include \"src/iroffer_headers.h\"
#include \"src/iroffer_globals.h\"
int
#ifdef __GNUC__
__attribute__ ((noreturn))
#endif
main (int argc, char **argv) {
 printf(\"%s\", (100 == ntohl(100)) ? \"big\" : \"little\");
 exit(0);
 }
" > config.temp.c
if $cctype config.temp.c $libs -o config.temp $WARNS $WERROR $CFLAGS $LDFLAGS $LIBS && [ "`./config.temp`" = "big" ]; then
 echo "big"
 echo "#define IR_ENDIAN_BIG" >> src/iroffer_config.h
elif [ "`./config.temp`" = "little" ]; then
 echo "little"
 echo "#define IR_ENDIAN_LITTLE" >> src/iroffer_config.h
else
 echo "Unknown. ***ERROR***"
 waserror
fi


echo -n "Seeing if large file support works... "
echo "
#include \"src/iroffer_config.h\"
#include \"src/iroffer_defines.h\"
#include \"src/iroffer_headers.h\"
#include \"src/iroffer_globals.h\"
int
#ifdef __GNUC__
__attribute__ ((noreturn))
#endif
main (int argc, char **argv) {
 int fd;
 int array[ ((int)sizeof(off_t)) - 7 ];
 fd=open(\"foo\", O_RDWR | O_CREAT | ADDED_OPEN_FLAGS, CREAT_PERMISSIONS);
 array[0] = array[0];
 close(fd);
 exit(0);
 }
" > config.temp.c
if $cctype -D_FILE_OFFSET_BITS=64 -D_LARGEFILE_SOURCE config.temp.c $libs -o config.temp $WARNS $WERROR $CFLAGS $LDFLAGS $LIBS; then
 echo "yes"
 echo "#define _FILE_OFFSET_BITS 64" >> src/iroffer_config.h
 echo "#define _LARGEFILE_SOURCE" >> src/iroffer_config.h
else
 echo "No.  Max filesize will be 2GB."
fi

echo -n "Determing the signedness of 'addrlen'... "
echo "
#include \"src/iroffer_config.h\"
#include \"src/iroffer_defines.h\"
#include \"src/iroffer_headers.h\"
#include \"src/iroffer_globals.h\"
int
#ifdef __GNUC__
__attribute__ ((noreturn))
#endif
main (int argc, char **argv) {
 int a=1; struct sockaddr_in b; SIGNEDSOCK int c;
 getsockname(a,(struct sockaddr *)&b,&c);
 exit(0);
 }
" > config.temp.c
if $cctype -DSIGNEDSOCK=signed config.temp.c $libs -o config.temp $WARNS $WERROR $CFLAGS $LDFLAGS $LIBS; then
 echo "signed"
 echo "#define SIGNEDSOCK signed" >> src/iroffer_config.h
elif $cctype -DSIGNEDSOCK=unsigned config.temp.c $libs -o config.temp $WARNS $WERROR $CFLAGS $LDFLAGS $LIBS; then
 echo "unsigned"
 echo "#define SIGNEDSOCK unsigned" >> src/iroffer_config.h
else
 echo "Unknown. ***ERROR***: neither signed or unsigned worked."
 echo "#define SIGNEDSOCK signed" >> src/iroffer_config.h
 waserror
fi


echo -n "Seeing how to display 64bit using printf... "
echo "
#include \"src/iroffer_config.h\"
#include \"src/iroffer_defines.h\"
#include \"src/iroffer_headers.h\"
#include \"src/iroffer_globals.h\"
int
#ifdef __GNUC__
__attribute__ ((noreturn))
#endif
main (int argc, char **argv)
  {
    ir_int64 a = 1000000000;
    a = a*10;
    printf(\"%\" LLPRINTFMT \"i\",a);
    exit(0);
  }
" > config.temp.c
if $cctype -DLLPRINTFMT=\"L\" config.temp.c $libs -o config.temp $WARNS $WERROR $CFLAGS $LDFLAGS $LIBS && [ "`./config.temp`" = "10000000000" ]; then
 echo "L"
 echo "#define LLPRINTFMT \"L\"" >> src/iroffer_config.h
elif $cctype -DLLPRINTFMT=\"ll\" config.temp.c $libs -o config.temp $WARNS $WERROR $CFLAGS $LDFLAGS $LIBS && [ "`./config.temp`" = "10000000000" ]; then
 echo "ll"
 echo "#define LLPRINTFMT \"ll\"" >> src/iroffer_config.h
elif $cctype -DLLPRINTFMT=\"l\" config.temp.c $libs -o config.temp $WARNS $WERROR $CFLAGS $LDFLAGS $LIBS && [ "`./config.temp`" = "10000000000" ]; then
 echo "l"
 echo "#define LLPRINTFMT \"l\"" >> src/iroffer_config.h
else
 echo "Unknown. ***ERROR***: neither ll, l, or L worked."
 echo "#define LLPRINTFMT \"L\"" >> src/iroffer_config.h
 waserror
fi


echo -n "Seeing how to display time_t using printf... "
echo "
#include \"src/iroffer_config.h\"
#include \"src/iroffer_defines.h\"
#include \"src/iroffer_headers.h\"
#include \"src/iroffer_globals.h\"
int
#ifdef __GNUC__
__attribute__ ((noreturn))
#endif
main (int argc, char **argv)
  {
    time_t a = 1000000000;
    a = a*10;
    printf(\"%\" TTPRINTFMT, a);
    exit(0);
  }
" > config.temp.c
if $cctype -DTTPRINTFMT=\"Li\" config.temp.c $libs -o config.temp $WARNS $WERROR $CFLAGS $LDFLAGS $LIBS && [ "`./config.temp`" = "10000000000" ]; then
 echo "Li"
 echo "#define TTPRINTFMT \"Li\"" >> src/iroffer_config.h
elif $cctype -DTTPRINTFMT=\"lli\" config.temp.c $libs -o config.temp $WARNS $WERROR $CFLAGS $LDFLAGS $LIBS && [ "`./config.temp`" = "10000000000" ]; then
 echo "lli"
 echo "#define TTPRINTFMT \"lli\"" >> src/iroffer_config.h
elif $cctype -DTTPRINTFMT=\"li\" config.temp.c $libs -o config.temp $WARNS $WERROR $CFLAGS $LDFLAGS $LIBS && [ "`./config.temp`" = "10000000000" ]; then
 echo "li"
 echo "#define TTPRINTFMT \"li\"" >> src/iroffer_config.h
elif $cctype -DTTPRINTFMT=\"i\" config.temp.c $libs -o config.temp $WARNS $WERROR $CFLAGS $LDFLAGS $LIBS && [ "`./config.temp`" = "1410065408" ]; then
 echo "i"
 echo "#define TTPRINTFMT \"i\"" >> src/iroffer_config.h
else
 echo "Unknown. ***ERROR***: neither Li, lli, li or i worked."
 echo "#define TTPRINTFMT \"\"" >> src/iroffer_config.h
 waserror
fi


