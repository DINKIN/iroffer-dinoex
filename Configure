echo -n "Checking for wait status values... "
echo "
#include \"src/iroffer_config.h\"
#include \"src/iroffer_defines.h\"
#include \"src/iroffer_headers.h\"
#include \"src/iroffer_globals.h\"
int
#ifdef __GNUC__
__attribute__ ((noreturn))
#endif
main (int argc, char **argv) {
  int status = 0;
  if (WIFEXITED(status) ||
      WIFSIGNALED(status) ||
      WEXITSTATUS(status) ||
      WTERMSIG(status))
    {
      status++;
    }
  exit(0);
}
" > config.temp.c
if $cctype config.temp.c $libs -o config.temp $WARNS $WERROR $CFLAGS $LDFLAGS $LIBS; then
echo "found"
else
echo "#define NO_WSTATUS_CODES" >> src/iroffer_config.h
echo "missing, won't report wait status codes"
fi


echo -n "Seeing if TOS can be set for IP sockets... "
echo "
#include \"src/iroffer_config.h\"
#include \"src/iroffer_defines.h\"
#include \"src/iroffer_headers.h\"
#include \"src/iroffer_globals.h\"
int
#ifdef __GNUC__
__attribute__ ((noreturn))
#endif
main (int argc, char **argv) {
  int fd = 0;
  int tempc = 0x8; /* IPTOS_THROUGHPUT */
  setsockopt(fd, IPPROTO_IP, IP_TOS, &tempc, sizeof(int));
  exit(0);
}
" > config.temp.c
if $cctype config.temp.c $libs -o config.temp $WARNS $WERROR $CFLAGS $LDFLAGS $LIBS; then
echo "yes"
else
echo "#define CANT_SET_TOS" >> src/iroffer_config.h
echo "no"
fi

echo -n "Checking for getaddrinfo ... "
echo "
#include \"src/iroffer_config.h\"
#include \"src/iroffer_defines.h\"
#include \"src/iroffer_headers.h\"
#include \"src/iroffer_globals.h\"
int
#ifdef __GNUC__
__attribute__ ((noreturn))
#endif
main (int argc, char **argv) {
  struct addrinfo hints, *res0;
  int error;

  memset(&hints, 0, sizeof(hints));
  hints.ai_family = PF_UNSPEC;
  hints.ai_socktype = SOCK_STREAM;
  error = getaddrinfo(\"www.kame.net\", \"http\", &hints, &res0);
  error ++;
  exit(0);
}
" > config.temp.c
if $cctype config.temp.c $libs -o config.temp $WARNS $WERROR $CFLAGS $LDFLAGS $LIBS; then
echo "found"
else
echo "#define NO_GETADDRINFO" >> src/iroffer_config.h
echo "missing, will use gethostbyname instead"
fi

echo -n "Checking for gethostbyname error values... "
echo "
#include \"src/iroffer_config.h\"
#include \"src/iroffer_defines.h\"
#include \"src/iroffer_headers.h\"
#include \"src/iroffer_globals.h\"
int
#ifdef __GNUC__
__attribute__ ((noreturn))
#endif
main (int argc, char **argv) {
  int i;
  switch (h_errno)
    {
     case HOST_NOT_FOUND:
     case NO_ADDRESS:
#if NO_ADDRESS != NO_DATA
     case NO_DATA:
#endif
     case NO_RECOVERY:
     case TRY_AGAIN:
       i = 1;
     default:
       i = 0;
    }
  exit(i);
}
" > config.temp.c
if $cctype config.temp.c $libs -o config.temp $WARNS $WERROR $CFLAGS $LDFLAGS $LIBS; then
echo "found"
else
echo "#define NO_HOSTCODES" >> src/iroffer_config.h
echo "missing, won't report error codes"
fi

echo -n "Checking for res_init() ... "
echo "
#include \"src/iroffer_config.h\"
#include \"src/iroffer_defines.h\"
#include \"src/iroffer_headers.h\"
#include \"src/iroffer_globals.h\"
#include <resolv.h>
int
#ifdef __GNUC__
__attribute__ ((noreturn))
#endif
main (int argc, char **argv) {
  res_init();
  exit(0);
}
" > config.temp.c
if $cctype config.temp.c $libs -o config.temp $WARNS $WERROR $CFLAGS $LDFLAGS $LIBS; then
echo "found"
echo "#define WITH_RESINIT" >> src/iroffer_config.h
else
echo "missing, won't use res_init()"
fi

if $OPT_GEOIP; then
	echo -n "Seeing if GeoIP libraries exist ... "
	echo "
#include \"src/iroffer_config.h\"
#include \"src/iroffer_defines.h\"
#include \"src/iroffer_headers.h\"
#include \"src/iroffer_globals.h\"
int
#ifdef __GNUC__
__attribute__ ((noreturn))
#endif
main (int argc, char **argv) {exit(0);}
" > config.temp.c
	if $cctype config.temp.c $libs -lGeoIP "-I${LOCALBASE}/include" "-L${LOCALBASE}/lib" -DUSE_GEOIP -o config.temp $WARNS $WERROR $CFLAGS $LDFLAGS $LIBS; then
		echo "found"
		echo "#define USE_GEOIP" >> src/iroffer_config.h
		FEATURES="${FEATURES},geoip"
		GEOLIB="-lGeoIP"
		GEOINC="-I${LOCALBASE}/include"
		GEOLDF="-L${LOCALBASE}/lib"
	else
		echo "not found"
		echo "***Disabled the GeoIP-check. If u want to use this feature, please install liblGeoIP.***"
	fi
fi

if $OPT_UPNP; then
	echo -n "Seeing if miniupnpc libraries exist ... "
	echo "
#include \"src/iroffer_config.h\"
#include \"src/iroffer_defines.h\"
#include \"src/iroffer_headers.h\"
#include \"src/iroffer_globals.h\"
int
#ifdef __GNUC__
__attribute__ ((noreturn))
#endif
main (int argc, char **argv) {exit(0);}
" > config.temp.c
	if $cctype config.temp.c $libs -lminiupnpc "-I${LOCALBASE}/include" "-L${LOCALBASE}/lib" -DUSE_UPNP -o config.temp $WARNS $WERROR $CFLAGS $LDFLAGS $LIBS; then
		echo "found"
		echo "#define USE_UPNP" >> src/iroffer_config.h
		FEATURES="${FEATURES},upnp"
		UPNPLIB="-lminiupnpc"
		UPNPINC="-I${LOCALBASE}/include"
		UPNPLDF="-L${LOCALBASE}/lib"
	else
		echo "not found"
		echo "***Disabled the UPNP-feature. If u want to use this feature, please install liblminiupnpc.***"
	fi
fi

if $OPT_CURL; then
	echo -n "Seeing if libcurl libraries exist (for the FETCH-Command)... "
	echo "
#include \"src/iroffer_config.h\"
#include \"src/iroffer_defines.h\"
#include \"src/iroffer_headers.h\"
#include \"src/iroffer_globals.h\"
int
#ifdef __GNUC__
__attribute__ ((noreturn))
#endif
main (int argc, char **argv) {exit(0);}
" > config.temp.c
	if $cctype config.temp.c $libs -lcurl -lz "-I${LOCALBASE}/include" "-L${LOCALBASE}/lib" -DUSE_CURL -o config.temp $WARNS $WERROR $CFLAGS $LDFLAGS $LIBS; then
		echo "found"
		echo "#define USE_CURL" >> src/iroffer_config.h
		FEATURES="${FEATURES},curl"
		CURLLIB=`curl-config  --libs`
		CURLINC=`curl-config  --cflags`
		CURLLDF="-L${LOCALBASE}/lib"
		curlssl=`ldd config.temp | grep libssl`
		if test "${curlssl}" != ""; then
			echo "Notice: Your libcurl is linked with OpenSSL."
		else
			curltls=`ldd config.temp | grep libgnutls`
			if test "${curltls}" != ""; then
				echo "Notice: Your libcurl is linked with GNU TLS."
			fi
		fi
	else
		echo "not found"
		echo "***Disabled the FETCH-Command. If u want to use this feature, please install libcurl.***"
	fi
fi

if $OPT_SSL; then
	echo -n "Seeing if OpenSSL libraries exist... "
	echo "
#include \"src/iroffer_config.h\"
#include \"src/iroffer_defines.h\"
#include \"src/iroffer_headers.h\"
#include \"src/iroffer_globals.h\"
int
#ifdef __GNUC__
__attribute__ ((noreturn))
#endif
main (int argc, char **argv) {exit(0);}
" > config.temp.c
	if $cctype config.temp.c $libs -lssl -lcrypto "-I${LOCALBASE}/include" "-L${LOCALBASE}/lib" -DUSE_OPENSSL -o config.temp $WARNS $CFLAGS $LDFLAGS $LIBS; then
		echo "found"
		echo "Configuring for OpenSSL."
		echo "#define USE_OPENSSL" >> src/iroffer_config.h
		FEATURES="${FEATURES},openssl"
		SSLLIB="-lssl -lcrypto"
		SSLINC="-I${LOCALBASE}/include"
		SSLLDF="-L${LOCALBASE}/lib"
	else
		echo "not found"
		echo "***Disabled the SSL Features. If u want to use this feature, please install OpenSSL.***"
	fi
	if test "${curltls}" != ""; then
		echo "*** Your libcurl is linked with GNU TLS, Please configure GNU TLS."
		waserror
	fi
fi


if $OPT_TLS; then
	echo -n "Seeing if GNU TLS libraries exist... "
	echo "
#include \"src/iroffer_config.h\"
#include \"src/iroffer_defines.h\"
#include \"src/iroffer_headers.h\"
#include \"src/iroffer_globals.h\"
int
#ifdef __GNUC__
__attribute__ ((noreturn))
#endif
main (int argc, char **argv) {exit(0);}
" > config.temp.c
	if $cctype config.temp.c $libs -lgnutls-openssl "-I${LOCALBASE}/include" "-L${LOCALBASE}/lib" -DUSE_GNUTLS -o config.temp $WARNS $CFLAGS $LDFLAGS $LIBS; then
		echo "found"
		echo "#define USE_GNUTLS" >> src/iroffer_config.h
		FEATURES="${FEATURES},gnutls"
		SSLLIB="-lgnutls"
		SSLINC="-I${LOCALBASE}/include"
		SSLLDF="-L${LOCALBASE}/lib"
	else
		echo "not found"
		echo "***Disabled the SSL Features. If u want to use this feature, please install GNU TLS.***"
	fi
	if test "${curlssl}" != ""; then
		echo "*** Your libcurl is linked with OpenSSL, Please configure OpenSSL."
		waserror
	fi
fi

if $OPT_WARN; then
WERROR2=$WERROR
fi

if $OPT_RUBY; then
	libruby=`${ruby} -r rbconfig -e "print Config::CONFIG[ 'LIBRUBYARG_SHARED' ]"`
	libsruby=`${ruby} -r rbconfig -e "print Config::CONFIG[ 'LIBRUBYARG_STATIC' ]"`
	archdir=`${ruby} -r rbconfig -e "print Config::CONFIG[ 'archdir' ]"`
	rubyhdrdir=`${ruby} -r rbconfig -e "print Config::CONFIG[ 'rubyhdrdir' ]"`
	sitearch=`${ruby} -r rbconfig -e "print Config::CONFIG[ 'sitearch' ]"`
	rubyversion=`${ruby} -e "print RUBY_VERSION.sub(/\.[0-9]*$/,'').sub(/\./,'')"`
	if test "${rubyhdrdir}" = "nil"
	then
		incruby="-I${archdir}"
	else
		incruby="-I${rubyhdrdir} -I${rubyhdrdir}/${sitearch}" 
	fi
	echo -n "Seeing if libruby libraries exist (for the RUBY-Scripts)... "
	echo "
#include \"ruby.h\"
int
#ifdef __GNUC__
__attribute__ ((noreturn))
#endif
main (int argc, char **argv) { ruby_init(); ruby_finalize(); exit(0);}
" > config.temp.c
	if $cctype config.temp.c $libs ${libruby} ${incruby} -DUSE_RUBY -o config.temp $WARNS $CFLAGS $LDFLAGS $LIBS; then
		echo "found"
		echo "Configuring for Ruby."
		echo "#define USE_RUBY" >> src/iroffer_config.h
		echo "#define USE_RUBYVERSION ${rubyversion}" >> src/iroffer_config.h
		FEATURES="${FEATURES},ruby"
		RUBYLIB="${libruby}"
		RUBYSLIB="${libsruby} -lm $rstatic"
		RUBYINC="${incruby}"
		RUBYLDF="-L${LOCALBASE}/lib"
		WERROR2=""
	else
		echo "not found"
		echo "***Disable the RUBY-extension. If u want to use this feature, please install libruby.***"
	fi
fi
if $OPT_STATIC; then
TARGETS="$TARGETS iroffer_static$exe"
fi

rm -f config.temp*

if test "${FEATURES}" != ""; then
	FEATURES=" - ${FEATURES#,}"
fi
echo "#define FEATURES \"${FEATURES}\"" >> src/iroffer_config.h
echo "Creating src/iroffer_config.h... Done"

echo -n "Creating Makefile... "

cp /dev/null Makefile
(
echo "# Automatically Generated, Do Not Edit #"
echo
echo VERSION=$VERSION
echo CC=$cctype
echo CONFIG_EXE=$exe
echo CONFIG_LDLIBS=$libs $GEOLIB $CURLLIB $UPNPLIB $SSLLIB $LIBS
echo CONFIG_LDFLAGS=$PROF $DEBUG $SSLLDF $GEOLDF $CURLLDF $UPNPLDF $RUBYLDF $LDFLAGS
echo CONFIG_CFLAGS=$PROF $WARNS $DEBUG $DEBUGFLAGS $WERROR2 $WARNS2 $CFLAGS
echo CONFIG_CPPFLAGS=$SSLINC $GEOINC $CURLINC $UPNPINC $RUBYINC
echo CONFIG_CHROOT=$NSSLIBS
echo CONFIG_SHARED=$RUBYLIB
echo CONFIG_STATIC=$RUBYSLIB -static
echo CONFIG_TARGETS=$TARGETS
echo INSTALL_GROUP=$installgroup
echo INSDIR?=$PREFIX/bin
echo
cat Makefile.config 
) > Makefile

echo Done
echo
echo "Type \"$maketype\" to compile"
echo "No errors or warnings should appear when compiling, if they do, something is wrong"
echo

# end
