int
#ifdef __GNUC__
__attribute__ ((noreturn))
#endif
main (int argc, char **argv)
{
  int     out_fd = 0;
  int     in_fd = 0;
  off_t   offset = 0;
  size_t  count = 0;
  ssize_t ret_val;
