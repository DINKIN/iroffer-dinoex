#include \"src/iroffer_headers.h\"
#include \"src/iroffer_globals.h\"
int
#ifdef __GNUC__
__attribute__ ((noreturn))
#endif
main (int argc, char **argv)
{
  siginfo_t si;
  struct sigaction sa;
  sa.sa_sigaction = NULL;
  si.si_code = 0;
  bzero(&si, sizeof(si));
  bzero(&sa, sizeof(sa));
